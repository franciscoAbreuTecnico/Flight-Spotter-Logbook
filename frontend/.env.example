# Environment variables for the Next.js frontend

# Base URL of the backend API. In Docker Compose this is usually http://localhost:8080
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080

# Clerk publishable key for the frontend. See your Clerk dashboard -> API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_PUBLISHABLE_KEY

# Clerk secret key (server-side only, for middleware/API routes)
CLERK_SECRET_KEY=YOUR_SECRET_KEY