# Environment variables for the Spring Boot backend

# JWKS endpoint for Clerk JWT validation
# Get this from your Clerk Dashboard -> API Keys -> Advanced -> JWKS URL
# Format: https://<your-clerk-instance>.clerk.accounts.dev/.well-known/jwks.json
JWKS_URI=https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json

# Name of the claim in the JWT that holds the user's role. Defaults to "role".
# Configure this in Clerk Dashboard -> JWT Templates
ROLE_CLAIM_FIELD=role

# CORS Configuration - Comma-separated list of allowed origins
# For production, update with your production domain(s)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# Cloudinary credentials. Used for signed uploads and accessing stored images.
# Get these from your Cloudinary dashboard -> Settings -> Access Keys
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# OpenSky Network API credentials (OAuth2 client credentials)
# Register at https://opensky-network.org/
OPENSKY_CLIENT_ID=your_email@example.com
OPENSKY_CLIENT_SECRET=your_opensky_secret